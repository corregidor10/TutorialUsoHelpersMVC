@using System.Web.UI.WebControls
@model DemoPlantillaRM.Models.Plantilla

@{
    ViewBag.Title = "Alta";
}


<h3>Alta</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre)
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Demarcacion)
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Demarcacion, new SelectList(new List<Object>
                    {
                    new {value="POR", text="Portero"},
                    new {value="DEF", text="Defensa"},
                    new {value="MED", text="Medio"},
                    new {value="DEL", text="Delantero"}
                    }, "value", "text"))

                @Html.ValidationMessageFor(model => model.Demarcacion, "")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Edad)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Edad)
                @Html.ValidationMessageFor(model => model.Edad)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Extracomunitario)
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.Extracomunitario, "Si") @Html.Label("Si")
                @Html.RadioButtonFor(model => model.Extracomunitario, "No") @Html.Label("No")

                @Html.ValidationMessageFor(model => model.Extracomunitario)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Añadir" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
